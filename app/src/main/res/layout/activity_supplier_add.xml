<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="th.ac.up.ict.student.productapp.SupplierAddActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name"
        android:id="@+id/txtSupplierAddName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtSupplierAddName"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtSupplierAddName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Address"
        android:id="@+id/txtSupplierAddAddress"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edtSupplierAddName"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/edtSupplierAddAddress"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtSupplierAddAddress"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/edtSupplierAddName"
        android:layout_alignEnd="@+id/edtSupplierAddName" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/btnSupplierAddOK"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edtSupplierAddAddress"
        android:layout_alignParentLeft="true" />
</RelativeLayout>
